{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "adapter": {
            "enum": [
                "angular",
                "node",
                "react",
                "svelte",
                "vue"
            ],
            "type": "string"
        },
        "adapterFileName": {
            "type": "string"
        },
        "banner": {
            "type": "string"
        },
        "baseLocale": {
            "type": "string"
        },
        "esmImports": {
            "type": "boolean"
        },
        "formattersTemplateFileName": {
            "type": "string"
        },
        "generateOnlyTypes": {
            "type": "boolean"
        },
        "loadLocalesAsync": {
            "type": "boolean"
        },
        "outputFormat": {
            "enum": [
                "JavaScript",
                "TypeScript"
            ],
            "type": "string"
        },
        "outputPath": {
            "type": "string"
        },
        "tempPath": {
            "type": "string"
        },
        "typesFileName": {
            "type": "string"
        },
        "typesTemplateFileName": {
            "type": "string"
        },
        "utilFileName": {
            "type": "string"
        }
    },
    "type": "object"
}

